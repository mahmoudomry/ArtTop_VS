<style>
    /* Controls
---------------------------------------------------------------------- */

    .controls {
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 30px;
    }

    .control,
    .control:focus {
        cursor: pointer;
        height: 27px;
        padding: 0 18px;
        border-radius: 3px;
        margin: 0 5px;
        border: 1px solid transparent;
    }

    .control:hover {
        border: 1px solid #40C782;
    }

    .mixitup-control-active {
        border: 1px solid #40C782 !important;
    }


    /* Target Elements
---------------------------------------------------------------------- */

    .mix,
    .gap {
        display: inline-block;
        vertical-align: top;
    }

    .mix {
        margin-bottom: 90px;
        position: relative;
    }

    /* Grid Breakpoints
---------------------------------------------------------------------- */

    /* 2 Columns */

    .mix,
    .gap {
        width: calc(100%/2 - (((2 - 1) * 1rem) / 2));
    }

    /* 3 Columns */

    @@media screen and (min-width: 541px) {

        .mix,
        .gap {
            width: calc(100%/3 - (((3 - 1) * 1rem) / 3));
        }
    }
</style>
