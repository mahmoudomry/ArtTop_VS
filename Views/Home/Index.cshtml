        <script>
            $(document).ready(function () {
                $('.owl-carousel').owlCarousel({
                    rtl: true,
                    loop: true,
                    margin: 40,
                    responsiveClass: true,
                    responsive: {
                        0: {
                            items: 3,
                            nav: true
                        },
                        600: {
                            items: 3,
                            nav: false
                        },
                        1000: {
                            items: 6,
                            nav: true,
                            loop: false
                        }
                    }
                });
            });
        </script>
    }
    else
    {

        <script>
            $(document).ready(function () {
                $('.owl-carousel').owlCarousel({
                    loop: true,
                    margin: 40,
                    responsiveClass: true,
                    responsive: {
                        0: {
                            items: 3,
                            nav: true
                        },
                        600: {
                            items: 3,
                            nav: false
                        },
                        1000: {
                            items: 6,
                            nav: true,
                            loop: false
                        }
                    }
                });
            });
        </script>
    }
</body>

