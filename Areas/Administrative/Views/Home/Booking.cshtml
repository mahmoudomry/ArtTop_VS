@model IEnumerable<ArtTop.Models.Booking>

@{
      ViewData["ActionTitle"]="List";
    ViewData["Title"] = "Booking";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

   

<div class="row">
    <div class="col-md-12 ">
        	<div class="kt-portlet">
										<div class="kt-portlet__head">
											<div class="kt-portlet__head-label">
												<h3 class="kt-portlet__head-title pull-left">
													@ViewData["ActionTitle"]
                                                     
												</h3>
                                             
											</div>

                                             
                                                
										</div>
                                        <div class="kt-portlet__body">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Doctor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Service)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Office)
            </th>
           @* <th>
                @Html.DisplayNameFor(model => model.IsRead)
            </th>*@
          @*  <th>
                @Html.DisplayNameFor(model => model.IsDone)
            </th>*@
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @item.Date.ToShortDateString()
            </td>
            <td>
                @item.Time.ToString("HH:mm tt")
            </td>
            <td>
                 @(item.Doctor!=null?item.Doctor.EnglishTitle:"")
                
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Service.EnglishTitle)
            </td>
            <td>
                @(item.Type==1?"Office/Clinic":"Doctor/person")
            </td>
            <td>

                @(item.Office!=null?item.Office.EnglishTitle:"")
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.IsRead)
            </td>*@
           @* <td>
                @Html.DisplayFor(modelItem => item.IsDone)
            </td>*@
           
            <td>
               <a  class="btn btn-outline-success"  href="@Url.Action("BookDetails","Home",new{area="Administrative",Id=item.Id})" ><i class="fa fa-eye  "></i> Details </a> 

                <a class="btn btn-outline-danger"  href="@Url.Action("DeleteBook","Home",new{area="Administrative",Id=item.Id})" onclick="return confirm('Are you sure From Deleted?')" > <i class="fa fa-trash "></i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>