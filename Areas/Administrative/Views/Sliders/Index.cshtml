@model IEnumerable<ArtTop.Models.Slider>

@{  	
    ViewData["ActionTitle"]="List";
    ViewData["Title"] = "Sliders";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

   

<div class="row">
    <div class="col-md-12 ">
        	<div class="kt-portlet">
										<div class="kt-portlet__head">
											<div class="kt-portlet__head-label">
												<h3 class="kt-portlet__head-title pull-left">
													@ViewData["ActionTitle"]
												</h3>
                                             
											</div>

                                               <a  class="btn btn-primary pull-right create-btn" href="@Url.Action("Create","Sliders",new{area="Administrative"})" >Create New</a>
                                                
										</div>
                                        <div class="kt-portlet__body">
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ArabicTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnglishTitle)
            </th>
           
           
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Order)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.Raw(item.ArabicTitle)
            </td>
            <td>
                  @Html.Raw(item.EnglishTitle)
               
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                 <td>
                <a  class="btn btn-outline-success"  href="@Url.Action("Edit","Sliders",new{area="Administrative",Id=item.Id})" ><i class="fa fa-edit  "></i> Edit </a> 
                <a  class="btn btn-outline-brand"  href="@Url.Action("Details","Sliders",new{area="Administrative",Id=item.Id})" ><i class="fa fa-edit  "></i> Details </a> 
                <a class="btn btn-outline-danger"  href="@Url.Action("Delete","Sliders",new{area="Administrative",Id=item.Id})" onclick="return confirm('Are you sure From Deleted?')" > <i class="fa fa-trash "></i> Delete</a>

            </td>
          
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>