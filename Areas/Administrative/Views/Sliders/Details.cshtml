@model ArtTop.Models.Slider

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12 ">
        	<div class="kt-portlet">
										<div class="kt-portlet__head">
											<div class="kt-portlet__head-label">
												<h3 class="kt-portlet__head-title pull-left">
													@ViewData["Title"]
												</h3>
                                             
											</div>

                                              
                                                
										</div>
                                             <div class="kt-portlet__body">
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ArabicTitle)
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.ArabicTitle)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnglishTitle)
        </dt>
        <dd class = "col-sm-10">
              @Html.Raw(Model.EnglishTitle)
          
        </dd>
        <dt class = "col-sm-2">

            @Html.DisplayNameFor(model => model.ArabicDetails)
        </dt>
        <dd class = "col-sm-10">
              @Html.Raw(Model.ArabicDetails)
           
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EnglishDetails)
        </dt>
        <dd class = "col-sm-10">
              @Html.Raw(Model.EnglishDetails)
           
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CoverImage)
        </dt>
        <dd class = "col-sm-10">
                        @if (Model.CoverImage != null)
                        {
                            <img src="~/assets/images/@Model.CoverImage" alt="" class="img-thumbnail" width="200px;" />
                        }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Order)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>