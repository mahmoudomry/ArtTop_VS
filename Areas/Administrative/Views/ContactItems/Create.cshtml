@model ArtTop.Models.ContactItem

@{
    ViewData["Title"] = "ContactItems";
    ViewData["ActionTitle"]= Model==null||Model.Id==0? "Create":"Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        	<div class="kt-portlet">
										<div class="kt-portlet__head">
											<div class="kt-portlet__head-label">
												<h3 class="kt-portlet__head-title">
													@ViewData["ActionTitle"]
												</h3>
											</div>
										</div>
<div class="kt-portlet__body">
        <form asp-action="Create" enctype="multipart/form-data">
                
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <input type="hidden" asp-for="Id" /> 
            <div class="form-group">
                <label asp-for="EnglishValue" class="control-label"></label>
                <input asp-for="EnglishValue" class="form-control" />
                <span asp-validation-for="EnglishValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArabicValue" class="control-label"></label>
                <input asp-for="ArabicValue" class="form-control" />
                <span asp-validation-for="ArabicValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Icon" class="control-label"></label>
                 <img src="~/assets/images/@Model.Icon" width="50px"/>
                <input type="hidden" asp-for="Icon" />
                <input type="file" name="IconFile" class="form-control" />
                <span asp-validation-for="Icon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Order" class="control-label"></label>
                <input asp-for="Order" class="form-control" />
                <span asp-validation-for="Order" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ShowInHome" /> @Html.DisplayNameFor(model => model.ShowInHome)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form><div>
    <a asp-action="Index">Back to List</a>
</div>
    </div>
</div>
</div>
</div>




