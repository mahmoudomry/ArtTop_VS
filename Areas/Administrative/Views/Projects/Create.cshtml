@model ArtTop.Models.Project

@{
    ViewData["Title"] = "Projects";
    ViewData["ActionTitle"]= Model==null||Model.Id==0? "Create":"Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-8 offset-2">
        	<div class="kt-portlet">
										<div class="kt-portlet__head">
											<div class="kt-portlet__head-label">
												<h3 class="kt-portlet__head-title">
													@ViewData["ActionTitle"]
												</h3>
											</div>
										</div>

        <form asp-action="Create" enctype="multipart/form-data">
                <div class="kt-portlet__body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <input type="hidden" asp-for="Id" /> 
              <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select asp-for="ServiceId" class ="form-control" asp-items="ViewBag.ServiceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ArabicTitle" class="control-label"></label>
                <input asp-for="ArabicTitle" class="form-control" />
                <span asp-validation-for="ArabicTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnglishTitle" class="control-label"></label>
                <input asp-for="EnglishTitle" class="form-control" />
                <span asp-validation-for="EnglishTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ArabicDetails" class="control-label"></label>
                <textarea asp-for="ArabicDetails" class="form-control ckeditor"></textarea>
                <span asp-validation-for="ArabicDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EnglishDetails" class="control-label"></label>
                <textarea asp-for="EnglishDetails" class="form-control ckeditor" ></textarea>
                <span asp-validation-for="EnglishDetails" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoverImage" class="control-label"></label>
                 <img src="~/assets/images/@Model.CoverImage" width="200px"/>
                <input type="hidden" asp-for="CoverImage" />
                <input type="file" name="CoverImageFile" class="form-control" />
            </div>
             <div class="form-group">
                <label asp-for="Client" class="control-label"></label>
                <input asp-for="Client" class="form-control" />
                <span asp-validation-for="Client" class="text-danger"></span>
            </div>
              <div class="form-group">
                <label asp-for="ClientLogo" class="control-label"></label>
                 <img src="~/assets/images/@Model.ClientLogo" width="200px"/>
                <input type="hidden" asp-for="ClientLogo" />
                <input type="file" name="ClientLogoFile" class="form-control" />
            </div>
              <div class="form-group">
                <label asp-for="DeliveryDate" class="control-label"></label>
                <input asp-for="DeliveryDate" type="date" class="form-control" />
                <span asp-validation-for="DeliveryDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
            </div>
        </form>
<div>
    <a asp-action="Index">Back to List</a>
</div>
    </div>
</div>
</div>


@section Scripts {
   
    <script>
        CreateEditor('#ArabicDetails');
        CreateEditor('#EnglishDetails');
 

      
   function CreateEditor(el)
   {
CKEDITOR.disableAutoInline = true;

    CKEDITOR.replace(el, {
      extraPlugins: 'sourcedialog',
      removePlugins: 'sourcearea',
      removeButtons: 'PasteFromWord'
    });
   }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


